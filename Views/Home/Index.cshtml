@{
    ViewData["Title"] = "Home Page";
}

@model ProjectsListViewModel

    <h1>Online Book Store</h1>

    @foreach (Book b in Model.Books)
    {
        <div class="card m-1 p-1">
            <h3>
                @b.Title
            </h3>
            <ul>
                <li>Title : @b.Title</li>
                <li>Author: @b.Author</li>
                <li>Publisher: @b.Publisher</li>
                <li>ISBN: @b.Isbn</li>
                <li>Classification: @b.Classification</li>
                <li>Category: @b.Category</li>
                <li>Number of pages: @b.PageCount</li>
                <li>Price @b.Price</li>
            </ul>
        </div>

    }
    <div page-model="@Model.PaginationInfo" page-action="Index"></div>